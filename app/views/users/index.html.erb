


<h2>User info</h2>
番号: <%= current_user.id%><br>
名前： <%= current_user.name %><br>
説明： <%= current_user.introduction %><br>

プロフィール画像: 
  <%= attachment_image_tag current_user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
<%= link_to "edit画面へのリンク", edit_user_path(current_user)%>

<!--投稿フォーム始め-->
<h2>book投稿フォーム</h2>
<%= form_with model: @book, local:true do |f|%>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Opinion</h4>
<%= f.text_area :body %>
<%= f.submit 'Create Book' %>
<% end %>
<!--投稿フォーム終わり-->

<h2>Users</h2>
<% @users.each do |user| %>

  イメージ  <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
  name：<%= user.name   %>
  <%= link_to "show", user_path(user) %>
  <br>

<% end %>